	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/node": "^24.0.10",
		"@types/react": "^18.0.32",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^5.2.0",
		"chalk": "^5.2.0",
